<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit your comment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="comment">Comment:</label>
                        <textarea class="form-control" rows="5" type="text" name="comment[text]" ><%=comment.text%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            
            <a href="/campgrounds"> Back </a>
        </div>
        

    </div>

</div>


